{
  "name": "oss-sentinel-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 build",
    "dev": "node ./scripts/dev-info.cjs",
    "test": "pnpm -r test",
    "demo": "cross-env DEMO=1 pnpm --filter @oss-sentinel/api demo",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push"
  },
  "devDependencies": {
    "@prisma/client": "6.15.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "prisma": "^6.15.0",
    "typescript": "^5.5.4"
  }
}
